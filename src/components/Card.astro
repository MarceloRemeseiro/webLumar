---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg p-4 text-black">
	<h2 class="text-xl font-bold mb-2">{title}</h2>
	<p class="text-gray-600">{body}</p>
	<a href={href} class="text-blue-500 hover:underline">Read more</a>
</div>