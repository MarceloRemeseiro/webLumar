    text2: "Producido por LVP",
    text3: "Dirección técnica en Broadcast SincrosAv",
  },
  {
    imgSrc: "/assets/valorant.jpg",
    altText: "Descripción de la imagen 3",
    text: "VALORANT CCIB BARCELONA",
    text2: "Producido por LVP",
    text3: "Dirección técnica en Broadcast SincrosAv",
  },
  {
